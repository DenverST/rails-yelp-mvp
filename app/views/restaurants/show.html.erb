<h1> <%= @restaurant.name %></h1>

<ul>
  <li> <%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>

<h2>Reviews</h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
      <%= review.rating %>
    </li>
  <% end %>
</ul>

<%= link_to "Return to restaurants", restaurants_path %>

<%= link_to "Review", new_restaurant_review_path(params[:id]) %>
